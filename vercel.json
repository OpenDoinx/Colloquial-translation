{
  "functions": {
    "api/translate.js": {
      "runtime": "@vercel/node@18"
    }
  },
  "builds": [
    {
      "src": "index.tsx",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "echo 'Building React app...' && mkdir -p dist && cp index.tsx dist/index.html",
  "outputDirectory": "dist"
}
